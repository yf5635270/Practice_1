<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
	    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd"
       default-lazy-init="true">

    <bean id="redisUtils" class="com.hlpay.plugin.cache.RedisUtils">
        <constructor-arg name="host" value="${cache.server.host}"/>
        <constructor-arg name="port" value="${cache.server.port}"/>
        <constructor-arg name="timeout" value="${cache.server.timeout}"/>
        <constructor-arg name="password" value="${cache.server.password}"/>
        <constructor-arg name="database" value="${cache.server.database.index}"/>
    </bean>

</beans>	
